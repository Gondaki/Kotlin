fun main() {
    // 1. Criação de Variáveis
    // Variáveis declaradas como 'val' quando o valor não muda, 'var' quando pode mudar
    val idadePessoa: Int = 25
    val alturaEmMetros: Double = 1.75
    val nomePessoa: String = "João"
    val ehEstudante: Boolean = true

    // 2. Atribuição de Valores
    // As variáveis já foram atribuídas com valores apropriados acima

    // 3. Operações Simples
    // Calcular a soma de duas idades
    val idadeOutraPessoa: Int = 30
    val somaIdades: Int = idadePessoa + idadeOutraPessoa

    // Multiplicar a altura por um fator de 2
    val alturaDuplicada: Double = alturaEmMetros * 2

    // Concatenar o nome com uma saudação
    val saudacao: String = "Olá, $nomePessoa!"

    // 4. Exibição de Resultados
    println("Idade da pessoa: $idadePessoa anos")
    println("Altura em metros: $alturaEmMetros m")
    println("Nome da pessoa: $nomePessoa")
    println("É estudante: $ehEstudante")
    println("Soma de idades: $somaIdades anos")
    println("Altura duplicada: $alturaDuplicada m")
    println("Saudação: $saudacao")
}
